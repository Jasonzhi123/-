.more .per-top {
  margin-top: 50rpx;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.more .per-top .top-top {
  display: flex;
  flex-direction: column;
  text-align: center;
}

.more .per-top .top-top .userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.more .per-top .top-top .userinfo-nickname {
  margin-top: 20rpx;
  display: block;
}

.nav {
  /* width: 100%; */
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin-top: 60rpx;

}

.nav-item {
  width: 33.3%;
  margin-top: 10rpx;
  text-align: center;
  padding-bottom: 20rpx;
}

.nav-item image {
  width: 80rpx;
  height: 80rpx;
}
.nav-item-title{
  font-size: 28rpx;
  line-height: 80rpx;
}
.per-info-item{
  display: flex;
  margin: 0rpx 40rpx;
  border-bottom: 1px dashed #aaa;
}
.item-image,item-image image{
  width: 50rpx;
  height: 50rpx;
}
.item-image image{
  width: 50rpx;
  height: 50rpx;
}
.item-title{
  height: 100rpx;
  line-height: 100rpx;
}
